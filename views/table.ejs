<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Home</title>
</head>
<body>
    <div class="container text-center">
        <div class="w-75 mx-auto form-register">
            <h2>Employee Information</h2>
            <hr/>
            <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Sr No.</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Age</th>
                        <th>City</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% user.forEach((index,val) =>{  %>
                        <tr>
                            <td><%=val+1 %></td>
                            <td><%=index.name %></td>
                            <td><%=index.email %></td>
                            <td><%=index.age %></td>
                            <td><%=index.city %></td>
                            <td>
                                <form method="get" action="/update/<%=index.email %>" ><button class="btn btn-warning mx-2">Update</button></form>
                            </td>
                            <td>
                                <form method="get" action="/delete/<%=index.email %>"><button class="btn btn-danger mx-2">Delete</button></form>
                            </td>
                        </tr>
                   <% }) %>
                </tbody>
            </table>
            <form method="get" action="/register" ><button class="btn btn-primary mx-2">Add User</button></form>
        </div>
        </div>
    </div>
</body>
</html>